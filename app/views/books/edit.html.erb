<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error-message">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="box-edit">
    <p class="p-edit">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="box-edit">
    <p class="p-edit">Body</p>
    <%= f.text_area :body %>
  </div>


  <%= f.submit 'Update Book' %>
<% end %>

<p class="link-edit">
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
</p>