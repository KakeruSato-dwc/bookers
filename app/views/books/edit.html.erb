<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="box-edit">
    <p class="p-edit">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="box-edit">
    <p class="p-edit">Body</p>
    <%= f.text_area :body %>
  </div>


  <%= f.submit 'Update Book' %>
<% end %>

<p class="link-edit">
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
</p>